extends layout

block append head
    script(src="./javascripts/vendor/alexweber/jquery.sha256.min.js", type="text/javascript")
    script(src="./javascripts/signup.js", type="text/javascript")
    script(src="./javascripts/login.js", type="text/javascript")
block append body
    div.container
        header#overview.jumbotron.subhead
            h2 Burndown Charts
            p.lead Signup or login to manage your charts
            div.subnav
                ul.nav.nav-pills
        div.row
            div#downloads_container.span6
                h3 Login
                hr
                form#login_form
                    div.login_field
                        label(for="login_user_name") Email:
                        input#login_user_name(type="text")
                    div.login_field
                        label(for="login_password") Password:
                        input#login_password(type="password")
                    div.form-actions
                        input#login_submit(type="submit", value="Login", class="btn btn-primary pull-right")
            div#signup_container.span6
                h3 Signup
                hr
                form#signup_form
                    div.signup_field
                        label(for="user_name") Email:
                        input#user_name(type="text")
                    div.signup_field
                        label(for="password") Password:
                        input#password(type="password")
                    div.form-actions
                        input#signup_submit(type="submit", value="Sign Up", class="btn btn-primary pull-right")